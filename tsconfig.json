{
  "compilerOptions": {
    "rootDir": "./src",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__test__"
  ]
}